// overwrite
html
  font-family $family-content
  font-size 16px
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  background-color $dark

*,
*::before,
*::after
  box-sizing border-box
  margin 0
li
  list-style none

h1, h2, h3, h4, h5
  font-family $family-display
input:focus
  border none
  outline none
.page
  background #161325

header.header
  position absolute
  width 100%
  z-index 9999
  nav.navbar
    display flex
    justify-content space-between
    &::before
      display none
    &::after
      display none
    .navbar-brand
      height auto
      padding 0
      a
        display block
        img
          width 50px
          height auto
          object-fit contain
    .navbar-nav-wrap
      ul.navbar-nav
        display flex
        flex-direction row
        align-items: center
        li
          a
            padding 10px 35px
            font-size 1.5rem
            text-transform uppercase
            text-decoration none
            color white
.section.hero
  height 100vh
  background url(../images/landing-back.png)
  background-size cover
  padding-bottom 0 !important

  .container
    height 100%
    .row
      align-items stretch
      height 100%
      .hero-content
        display flex
        flex-direction column
        justify-content center
        align-items center
        height 100%
        h1
          font-size 3rem
          color white
          span
            color #F79420
        p
          font-size 1.5rem
          color white
      .hero-image
        display flex
        justify-content center
        align-items center
        height 100%
        img
          width: 100%
          height: auto
          object-fit: contain
.logo-container
  margin-bottom 50px
  .logo
    display flex
    justify-content center
    img
      width 100%
.section.hero.listing
  height 50vh
  background url(../images/listing-back.png)
  background-size cover
  padding-bottom 0 !important
.section.live-auction
  text-align center
